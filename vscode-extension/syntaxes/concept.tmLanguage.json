{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Concept",
  "patterns": [
    {
      "include": "#spec-wrapper"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#simple-types"
    }
  ],
  "repository": {
    "spec-wrapper": {
      "name": "meta.spec-wrapper.concept",
      "begin": "<concept_spec>",
      "end": "</concept_spec>",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.tag.concept" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.tag.concept" }
      },
      "patterns": [
        { "include": "#keywords" },
        { "include": "#comments" },
        { "include": "#strings" },
        { "include": "#simple-types" }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.concept",
          "match": "^\\s*(concept|purpose|state|actions|queries|operational principle)\\b"
        },
        {
          "name": "keyword.type.concept",
          "match": "\\b(String|Number|Boolean|Date|DateTime|Flag|ObjectId|Object)\\b"
        },
        {
          "name": "keyword.modifier.concept", 
          "match": "\\b(optional|set|seq|of|with|element|a|an)\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.concept",
          "match": "//.*$"
        },
        {
          "name": "comment.line.number-sign.concept",
          "match": "#.*$"
        },
        {
          "name": "comment.block.concept",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.concept",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.concept",
          "match": "\\\\."
        }
      ]
    },
    "simple-types": {
      "patterns": [
        {
          "name": "entity.name.type.concept",
          "match": "\\b[A-Z]\\w*\\b"
        },
        {
          "name": "variable.other.concept",
          "match": "\\b[a-z]\\w*\\b"
        },
        {
          "name": "support.function.concept",
          "match": "\\b_\\w+\\b"
        }
      ]
    }
  },
  "scopeName": "source.concept"
}