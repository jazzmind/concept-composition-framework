{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Sync",
  "patterns": [
    {
      "include": "#spec-wrapper"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#simple-identifiers"
    }
  ],
  "repository": {
    "spec-wrapper": {
      "name": "meta.spec-wrapper.sync",
      "begin": "<sync_spec>",
      "end": "</sync_spec>",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.tag.sync" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.tag.sync" }
      },
      "patterns": [
        { "include": "#keywords" },
        { "include": "#comments" },
        { "include": "#strings" },
        { "include": "#simple-identifiers" }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sync",
          "match": "^\\s*(sync|when|where|then)\\b"
        },
        {
          "name": "keyword.operator.sync",
          "match": "\\b(actions|Frames|Vars)\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.sync",
          "match": "//.*$"
        },
        {
          "name": "comment.line.number-sign.sync", 
          "match": "#.*$"
        },
        {
          "name": "comment.block.sync",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.sync",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.sync",
          "match": "\\\\."
        }
      ]
    },
    "simple-identifiers": {
      "patterns": [
        {
          "name": "entity.name.type.concept.sync",
          "match": "\\b[A-Z]\\w*\\.[a-z]\\w*\\b"
        },
        {
          "name": "entity.name.type.concept.sync",
          "match": "\\b[A-Z]\\w*\\._\\w+\\b"
        },
        {
          "name": "variable.parameter.sync",
          "match": "\\b[a-z]\\w*\\b"
        }
      ]
    }
  },
  "scopeName": "source.sync"
}